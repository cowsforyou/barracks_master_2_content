<root>
	<!-- Include stylesheets -->
	<styles>
		<include src="file://{resources}/styles/hero_selection.css" />
	</styles>

	<!-- Include script files -->
	<scripts>
		<!-- Libraries -->
		<include src="file://{resources}/scripts/modular.js" />

		<!-- Panel script -->
		<include src="file://{resources}/scripts/hero_selection.js" />
	</scripts>

	<Panel hittest="true" class="MainHeroSelectionPanel">
		<!-- Status Container -->
		<Panel id="StatusContainer" class="StatusContainer">
			<Panel id="Status">
				<Label text="Status to be built here" />
			</Panel>
		</Panel>

		<!-- Selection Container -->
		<Panel id="SelectionContainer" class="SelectionContainer">
			<Panel class="ColorSelector">
				<Label class="SelectionTitle" text="Color" />
				<Button id="SelectColorSilver" class="SelectColorButton" onactivate="SelectColor('silver')" />
				<Button id="SelectColorBlack" class="SelectColorButton" onactivate="SelectColor('black')" />
				<Button id="SelectColorRed" class="SelectColorButton" onactivate="SelectColor('red')" />
				<Button id="SelectColorCyan" class="SelectColorButton" onactivate="SelectColor('cyan')" />
			</Panel>
			<Panel id="FactionSelector">
				<Panel id="FactionIcon">
					<Button id="SelectRandomFaction" class="PreviewFactionButton" onactivate="SwitchToHeroPreview('npc_dota_hero_error')" />
					<Button id="SelectLingFaction" class="PreviewFactionButton" onactivate="SwitchToHeroPreview('npc_dota_hero_keeper_of_the_light')" />
					<Button id="SelectXoyaFaction" class="PreviewFactionButton" onactivate="SwitchToHeroPreview('npc_dota_hero_nevermore')" />
				</Panel>
				<DOTAScenePanel id="HeroPreview" particleonly="false" class="RandomFactionPreview" unit="random" />
				<Label style="horizontal-align: center; vertical-align: center; margin-top: 20px;" text="Random" />
			</Panel>
			<Panel id="CustomisationSelector">
				<Label id="CustomiseTitle" class="SelectionTitle" text="Customise" />
			</Panel>
		</Panel>

		<!-- Game Info Container -->
		<Panel id="GameInfoContainer" class="GameInfoContainer">
			<Panel id="Map" />
			<Panel class="MapInfoContainer">
				<Label class="MapInfoContainer" text="BM2 Legacy" />
				<Label class="MapInfoContainer" text="2 v 2" />
			</Panel>
			<Panel class="StartGameContainer">
				<Panel id="PickTextPanel">
					<Panel id='PickTimer'>
						<Label id='TimerTxt' text="" />
					</Panel>
				</Panel>
				<Button id="ReadyBtn" onactivate="SelectHero()">
					<Label id="ReadyBtnTxt" text="Ready" />
				</Button>
			</Panel>
		</Panel>
	</Panel>
</root>