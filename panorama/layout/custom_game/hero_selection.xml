<root>
	<!-- Include stylesheets -->
	<styles>
		<include src="file://{resources}/styles/hero_selection.css" />
	</styles>

	<!-- Include script files -->
	<scripts>
		<!-- Libraries -->
		<include src="file://{resources}/scripts/modular.js" />

		<!-- Panel script -->
		<include src="file://{resources}/scripts/hero_selection.js" />
	</scripts>

	<Panel hittest="false" class="MainPanel">
		<Panel hittest="true" id="PickingScreen">
			<!--Left-hand player section ==================================================================-->
			<Panel id="LeftPlayers">
				<!-- JS Inserts player elements here -->
			</Panel>
			<!-- Middle section ==================================================================-->
			<Panel class="ClassContainer">
				<Panel id="PickTextPanel">
					<Panel id='PickTimer'>
						<Label id='TimerTxt' text="" />
					</Panel>
					<Label id="HeroSelectText" text="Choose your Builder" />
				</Panel>
				<!-- Pick list (showing options) -->
				<Panel id="PickList">
					<Label class="BuilderName" text="Ling" />
					<Panel id="npc_dota_hero_keeper_of_the_light" class="ClassOption" onactivate="SelectHero('npc_dota_hero_keeper_of_the_light')" />
					<Button class="PreviewHeroBtn" id="PreviewLingHeroBtn" onactivate="PreviewLingHero()">
						<Label text="More info" />
					</Button>
					<Label class="BuilderName" text="Xoya" />
					<Panel id="npc_dota_hero_nevermore" class="ClassOption" onactivate="SelectHero('npc_dota_hero_nevermore')" />
					<Button class="PreviewHeroBtn" id="PreviewXoyaHeroBtn" onactivate="PreviewXoyaHero()">
						<Label text="More info" />
					</Button>
					<!-- <Label class="BuilderName" text="Coming Soon Builder" />
					<Panel id="npc_dota_hero_arc_warden" class="ClassOption" onactivate="SelectHero('npc_dota_hero_arc_warden')" /> -->
				</Panel>

				<!-- Preview hero screen -->
				<Panel class="PreviewHeroScreen" id="PreviewLingHeroScreen">
					<Label class="PreviewHeroText" text="#bm_lore_ling" />
					<Button class="BackBtn" onactivate="BackToList()">
						<Label text="Back" />
					</Button>
				</Panel>

				<!-- Preview hero screen -->
				<Panel class="PreviewHeroScreen" id="PreviewXoyaHeroScreen">
					<Label class="PreviewHeroText" text="#bm_lore_xoo" />
					<Button class="BackBtn" onactivate="BackToList()">
						<Label text="Back" />
					</Button>
				</Panel>

				<!-- Post-pick screen (hero view) -->
				<Panel id="PostPickScreen">
					<Button id="EnterGameBtn" class="disabled" onactivate="EnterGame()">
						<Label id="EnterGameBtnTxt" text="Waiting for other players..." />
					</Button>
				</Panel>
			</Panel>
			<!-- Right-hand player section ==================================================================-->
			<Panel id="RightPlayers">
				<!-- JS Inserts player elements here -->
			</Panel>
		</Panel>
	</Panel>
</root>