<root>
	<!-- Include stylesheets -->
	<styles>
		<include src="file://{resources}/styles/hero_selection.css" />
	</styles>

	<!-- Include script files -->
	<scripts>
		<!-- Libraries -->
		<include src="file://{resources}/scripts/modular.js" />

		<!-- Panel script -->
		<include src="file://{resources}/scripts/hero_selection.js" />
	</scripts>

	<Panel hittest="true" class="MainHeroSelectionPanel">
		<!-- Status Container -->
		<Panel id="StatusContainer" class="StatusContainer">
			<Panel id="Status" />
		</Panel>

		<!-- Selection Container -->
		<Panel id="SelectionContainer" class="SelectionContainer">
			<Panel class="ColorSelector">
				<Label class="SelectionTitle" text="Color" />
				<Panel class="ColorSelectorParent">
					<Panel class="ColorSelectorContainer">
						<Button id="SelectColorRandom" class="SelectColorButton" onactivate="SelectColor('Random')">
							<Label style="horizontal-align: center; vertical-align: center; text-align: center; " text="?" />
						</Button>
						<Button id="SelectColorGold" class="SelectColorButton" onactivate="SelectColor('Gold')" />
						<Button id="SelectColorRed" class="SelectColorButton" onactivate="SelectColor('Red')" />
						<Button id="SelectColorBlue" class="SelectColorButton lockedButtons disabledPremiumButtons">
							<Label id="LockedBlueDescription" text="LOCKED" />
						</Button>
						<Button id="SelectColorLightGreen" class="SelectColorButton lockedButtons disabledPremiumButtons">
							<Label id="LockedLightGreenDescription" text="LOCKED" />
						</Button>
						<Button id="SelectColorPurple" class="SelectColorButton lockedButtons disabledPremiumButtons">
							<Label id="LockedPurpleDescription" text="LOCKED" />
						</Button>
					</Panel>
					<Panel class="ColorSelectorContainer">
						<Button id="SelectColorGreen" class="SelectColorButton" onactivate="SelectColor('Green')" />
						<Button id="SelectColorYellow" class="SelectColorButton" onactivate="SelectColor('Yellow')" />
						<Button id="SelectColorPink" class="SelectColorButton" onactivate="SelectColor('Pink')" />
						<Button id="SelectColorLightBlue" class="SelectColorButton lockedButtons disabledPremiumButtons">
							<Label id="LockedLightBlueDescription" text="LOCKED" />
						</Button>
						<Button id="SelectColorSilver" class="SelectColorButton lockedButtons disabledPremiumButtons">
							<Label id="LockedSilverDescription" text="LOCKED" />
						</Button>
						<Button id="SelectColorBlack" class="SelectColorButton lockedButtons disabledPremiumButtons">
							<Label id="LockedBlackDescription" text="LOCKED" />
						</Button>
					</Panel>
				</Panel>
			</Panel>
			<Panel id="FactionSelector">
				<Panel id="FactionIcon">
					<Button id="SelectRandomFaction" class="PreviewFactionButton" onactivate="SwitchToHeroPreview('npc_dota_hero_error')" />
					<Button id="SelectLingFaction" class="PreviewFactionButton" onactivate="SwitchToHeroPreview('npc_dota_hero_keeper_of_the_light')" />
					<Button id="SelectXoyaFaction" class="PreviewFactionButton" onactivate="SwitchToHeroPreview('npc_dota_hero_nevermore')" />
				</Panel>
				<DOTAScenePanel id="HeroPreview" particleonly="false" class="RandomFactionPreview" unit="random" />
				<Label id="DefaultFactionSelection" style="horizontal-align: center; vertical-align: center; margin-top: 20px;" text="Random" />
				<Label id="BuilderInfo" style="horizontal-align: center; text-align: center; margin-top: 10px;" text="#bm_random_lore" />
			</Panel>
			<Panel id="CustomisationSelector">
				<Label id="CustomiseTitle" class="SelectionTitle" text="Customise" />
				<Label class="CustomiseDescription" text="COMING SOON" />
			</Panel>
		</Panel>

		<!-- Game Info Container -->
		<Panel id="GameInfoContainer" class="GameInfoContainer">
			<Panel id="Map" />
			<Panel class="MapInfoContainer">
				<Label id="MapInfoMapName" class="MapInfoContainer" text="Loading Map Name" />
				<Label id="MapInfoMaxPlayers" class="MapInfoContainer" text="Loading Map Description" />
			</Panel>
			<Panel class="StartGameContainer">
				<Panel id="PickTextPanel">
					<Panel id='PickTimer'>
						<Label id='TimerTxt' text="" />
					</Panel>
				</Panel>
				<Button id="ReadyBtn" onactivate="SelectHero()">
					<Label id="ReadyBtnTxt" text="Ready" />
				</Button>
			</Panel>
		</Panel>
	</Panel>
</root>